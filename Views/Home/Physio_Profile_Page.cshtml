@model HomePhysio.Models.PhysiotherapistModel


@{
    ViewData["Title"] = "Profile_Page";
}
<div ng-controller="HomeController" ng-init="PhysioAppointmentList(@Model.PhysiotherapistId)">
    <h2 class="text-primary">My Profile</h2>
    <!-- profile pic of physio-->
    <div class="container-fluid">
        <div class="box_general_3">
            <div class="profile">
                <div class="row">
                    <div class="col-lg-5 col-md-4">
                        <figure class="all_image-pic">
                            <img class="img-fluid align-content-center" width="200" height="200" src="~/img/Profile pic/PP.png" alt="PP">

                        </figure>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--Table info-->
    <div class="container-fluid">
        <input asp-for="PhysiotherapistId" hidden />
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <td><strong>Name</strong> </td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td><strong>Age</strong> </td>
                    <td>@Model.age</td>
                </tr>
                <tr>
                    <td><strong>Gender</strong> </td>
                    <td>@Model.GenderData.TypeName</td>
                </tr>
                <tr>
                    <td><strong>Address</strong> </td>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <td><strong>Email</strong> </td>
                    <td>@Model.UserData.Email</td>
                </tr>
                <tr>
                    <td><strong>ContactNo</strong> </td>
                    <td>@Model.ContactNo</td>
                </tr>
                <tr>
                    <td><strong>Citizenship No</strong> </td>
                    <td>@Model.CitizenshipNumber</td>
                </tr>
                <tr>
                    <td><strong>Specialization</strong> </td>
                    <td>
                        <ul>
                            @foreach (var item in Model.physioCategoryModels)
                            {
                                <li>@item.Category.Name</li>
                            }
                        </ul>
                    </td>
                </tr>
                <tr>
                    <td><strong>Qualification</strong> </td>
                    <td>@Model.Qualification</td>
                </tr>
                <tr>
                    <td><strong>Experience</strong></td>
                    <td>@Model.Experience</td>

                </tr>
            </tbody>
        </table>
    </div>

    <br />
    <br />

    <!--Appointment list viewed by physio-->
    <div clss="container-fluid">

        <h3>Appointments</h3>
        <input asp-for="PhysiotherapistId" hidden />
        <table class="table table-striped table-bordered">


            <thead>
                <tr>
                    <th>Name of patient</th>
                    @*<th>Address</th>
                    <th>Contact no.</th>
                    <th>Email</th>
                    <th>Appointment Time</th>
                    <th>Total Charge</th>
                    <th>Response</th>*@
                    <th>Date</th>
                    <th>Time</th>

                    <th>Status  </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="x in Physioappoint">
                    
                    <td>{{x.patientName}}</td>
                    <td>{{x.date}}</td>
                    <td>{{x.time}}</td>
                    <td>
                        {{x.status}}

                    </td>
                    <td>
                     
                        @*<button onclick="window.location.reload();">Reload Page</button>*@
                        <button ng-click="ConfirmAppointment(x.appointmentId,@Model.PhysiotherapistId)" class="btn btn-success btn-sm" >Confirm</button>  <button class="btn btn-danger btn-sm">Cancel</button> 
                    </td>
                </tr>
            </tbody>

        </table>
    </div>

