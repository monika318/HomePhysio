@model HomePhysio.Models.PatientModel


@{
    ViewData["Title"] = "Patient_Profile_Page";
}

<br />
<br />

<h2 class="text-primary">My Profile</h2>

 profile pic of patient
<div class="container-fluid">

    <div class="box_general_3">
        <div class="profile">
            <div class="row">
                <div class="col-lg-5 col-md-4">
                    <figure class="all_image-pic">
                        <img class="img-fluid align-content-center" width="200" height="200" src="~/img/Profile pic/PP.png" alt="PP">

                    </figure>
                </div>
            </div>
        </div>

    </div>

</div>

<br />
<br />

<!--Table info-->
<div class="container-fluid">
    <table class="table table-striped table-bordered">
        <input asp-for="PatientId" hidden />
        <tbody>
            <tr>
                <td><strong>Name</strong> </td>
                <td>@Model.Name</td>
            </tr>

            <tr>
                <td><strong>Email</strong> </td>
                <td>@Model.Email</td>
            </tr>

            <tr>
                <td><strong>Address</strong> </td>
                <td>@Model.Address</td>
            </tr>


            <tr>
                <td><strong>Contact no.</strong></td>
                <td>@Model.PhoneNo</td>

            </tr>

        </tbody>
    </table>
</div>

<br />
<br />

<div ng-controller="HomeController">
    <button type="button" class="btn btn-primary" ng-click="AppointmentList(@Model.PatientId)">
        My Appointments
    </button>
</div>

