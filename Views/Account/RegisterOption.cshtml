
@{
    ViewData["Title"] = "RegisterOption";
}

<link href="~/css/SplitScreen.css" rel="stylesheet" />
<h1>RegisterOption</h1>

<div class="split left">
    <div class="centered">
        <form asp-controller="Account" asp-action="Register" method="get">
            <div class="form-group">
                <input type="submit" value="Patient" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="split right">
    <div class="centered">
        <form asp-controller="Account" asp-action="RegisterPhysio" method="get">
            <div class="form-group">
                <input type="submit" value="Physiotherapist" class="btn button4" />
            </div>
        </form>
    </div>
</div>

