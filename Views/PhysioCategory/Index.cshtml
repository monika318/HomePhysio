@model IEnumerable<HomePhysio.Models.PhysioCategoryModel>

@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary" style="height:50px; text-align:center"><h3 class="text-white text-center" style="padding:10px"><strong>Specialization</strong></h3></div>
<br />

<div>
    <p class="text-justify text-success"><strong>Please select your specialization.</strong></p>
</div>
<br />
<a asp-action="Create" class="btn btn-primary btn-sm">Select specialization</a>
<br />
<br />
<table class="table  table-responsive" style="box-shadow: 0 0 0 5px rgba(0,0,0,0.05)">
    <thead>
        <tr class="bg-info">
            @*<th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>*@
            <th>
                @*@Html.DisplayNameFor(model => model.CategoryId)*@ Specialization
            </th>
            <th>
               Experience
            </th>
            <th>
                Action
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.PhysiotherapistId)
                </th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-info">
                @*<td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Physiotherapist.Name)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Experience)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
